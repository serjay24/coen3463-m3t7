doctype html
html
  head
    title= title

    // Compiled and minified CSS
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css')
    
    // Import Google Icon Font
    link(href='http://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    
    //Import Google Font - Ubuntu
    link(href='https://fonts.googleapis.com/css?family=Ubuntu|Ubuntu+Mono' rel='stylesheet')
    
    // Let browser know website is optimized for mobile
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    
    // Import Font Awesome Icons
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    
    //Stylesheets.css
    link(rel= 'stylesheet', type= 'text/css', href= '../../stylesheets/style.css')

  body

    nav.blue
      .nav-wrapper
        a.brand-logo.left.hide-on-small-only(href='/') ExpressVids
        a.brand-logo.center.hide-on-med-and-up(href='/') ExpressVids

        a.button-collapse(href='#', data-activates='mobile-demo')
          i.material-icons menu
        ul#nav-mobile.left.hide-on-med-and-down.right
          li
            a(href='/')
              i.fa.fa-home.left.small
              | Home
          li
            a(href='/tutorials') All List
          li
            a(href='/tutorials/new') Add New Entry
        ul#mobile-demo.side-nav.blue
          li
            a.white-text.waves-effect.waves-white(href='/')
              i.fa.fa-home.left.small.white-text
              | Home
          li
            a.white-text.waves-effect.waves-white(href='/tutorials')
              i.fa.fa-search.left.small.white-text
              | All List
          li
            a.white-text.waves-effect.waves-white(href='/tutorials/new')
              i.fa.fa-plus-square-o.left.small.white-text
              | Add New Entry
  
    block content

    script(type='text/javascript', src='https://code.jquery.com/jquery-2.1.1.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js')
    script(type='text/javascript', src= '../../javascripts/script.js')