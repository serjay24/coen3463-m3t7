extends layout

block content

  br

  .container.white(style= 'padding: 2%')
    h5= videoInfo.title
    .row
      .col.s12.m12.l12.black-text
        .video-container
          iframe(width= '853', height: '15', src= videoInfo.embed, frameborder= '0', allowfullscreen)

        br

        p
          b.red-text
            | Uploaded by: 
          | #{videoInfo.uploadersName}
          br
          br
          b.red-text
            | Uploader's YouTube Page: 
          a.black-text.truncate(href= videoInfo.uploadersYoutubeLink, target= '_blank')= videoInfo.uploadersYoutubeLink
          br
          br
          b.red-text
            | YouTube Link: 
          a.black-text.truncate(href= videoInfo.uploadersYoutubeLink, target= '_blank')= videoInfo.youtubeLink
          br
          br
          b.red-text
            | Description: 
          | #{videoInfo.description}
          br
          br
          b.red-text
            | Publish Date: 
          | #{videoInfo.publishDate}
          br
          br
          b.red-text
            | Category: 
          | #{videoInfo.category}
          br
          br
          b.red-text
            | Number of Views: 
          | #{videoInfo.views}
          br
          br
          b.red-text
            | Number of Likes: 
          | #{videoInfo.likes}
    .row
      .col.l3.offset-l3.hide-on-med-and-down
        a.waves-effect.waves-white.btn-flat.white-text.blue.truncate(href= '/tutorials/' + videoInfo._id + '/edit')
          i.fa.fa-pencil.left.small
          | Update Info
      .col.l6.hide-on-med-and-down
        a.waves-effect.waves-red.btn-flat.white-text.red(href= '/tutorials/' + videoInfo._id + '/delete', onclick= 'return confirmDelete()')
          i.fa.fa-trash.left.small
          | Delete

    .row.hide-on-large-only
      .col.s12.m12
        a.waves-effect.waves-white.btn-flat.white-text.blue.truncate(href= '/tutorials/' + videoInfo._id + '/edit')
          i.fa.fa-pencil.left.small
          | Update Info
    br
    .row.hide-on-large-only
      .col.s12.m12
        a.waves-effect.waves-red.btn-flat.white-text.red(href= '/tutorials/' + videoInfo._id + '/delete', onclick= 'return confirmDelete()')
          i.fa.fa-trash.left.small
          | Delete