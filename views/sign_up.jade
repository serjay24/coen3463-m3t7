extends layout

block content
  br
  .inputfield
    form(method= 'POST', action= '/tutorials/new', onsubmit= 'return validateForm()')
      .container.rown
        h3.blue-text.center Create Account

        .row
          .col.s12.m12.l6
            .input-field.col.white-text
              input#first_name.validate(type='text')
              label(for='first_name') First Name
          .col.s12.m12.l6
            .input-field.col.white-text
              input#last_name.validate(type='text')
              label(for='last_name') Last Name
          .col.s12.m12.l12
            .input-field.col.white-text
              input#email.validate(type='email')
              label(for='email', data-error='wrong', data-success='right') Email
          .col.s12.m12.l6
            .input-field.col.white-text
              input#password.validate(type='password')
              label(for='password') Password
          .col.s12.m12.l6
            .input-field.col.white-text
              input#confirm-password.validate(type='password')
              label(for='password') Retype Password 
          .col.s12.m12.l6
            .input-field.col.white-text
              input.datepicker(type='date')
              label(for='date') Birth Date
        .row.center
          button.btn.waves-effect.waves-light(type='submit', name='action')
            | Register
            i.fa.fa-send.small.left
        .row
          p.white-text.center
              | Already have account? Click 
              b
                a.blue-text.link(href= '/login') Login


